
<div class="row">
<div class="leftcolumn">
{{#if blogs}}
{{#each blogs}}
<div class="row">
  <div class="leftcolumn">
    <div class="card">
    <a href = "/blogs/{{_id}}" class="col text-center category__link">
      <h1>{{title}}</h1>
      <h2>Date: {{dateCreated}}</h2>
      <div class="myblogimg" >
         <img src="/public/uploads/{{picture}}"style="height: 250px  ;     width: 245px; " alt="Image description"> 
      </div>
    </a>
    </div>

{{/each}}

{{else}}

<h3> No blogs to display</h3>

</div>
</div>



{{/if}}

